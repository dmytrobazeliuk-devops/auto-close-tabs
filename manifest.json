{
  "manifest_version": 3,
  "name": "Simple Auto Close Inactive Tabs",
  "version": "1.2",
  "description": "Automatically closes inactive tabs after 3 days of inactivity",
  "permissions": [
    "tabs",
    "storage",
    "alarms",
    "notifications"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Simple Auto Close Inactive Tabs",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "stats.html",
        "stats.js"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}
